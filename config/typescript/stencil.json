{
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "typeRoots": ["node_modules/@types"],
    "types": [
      "vue",
      "@easily-js/components/src",
      "@easily-js/components/src/components.d.ts"
    ]
  },
  "include": [
    "packages",
    "docs/.vitepress/components/*.vue",
    "docs/.vitepress/*.ts",
    "meta",
    "vitest.config.ts",
    "*.d.ts",
    "play",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
