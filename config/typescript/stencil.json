{
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "packages",
    "docs/.vitepress/components/*.vue",
    "docs/.vitepress/*.ts",
    "meta",
    "vitest.config.ts",
    "*.d.ts",
    "play"
  ],
  "exclude": ["node_modules", "**/**/*.md", "**/dist", "dist"]
}
